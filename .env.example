# Elriel Environment Variables - EXAMPLE FILE
# Copy this file to .env and fill in your actual values

# Server configuration
PORT=3000
NODE_ENV=development # Change to 'production' for deployment

# Session configuration
SESSION_SECRET=your_secure_session_secret_here

# Database configuration
DB_PATH=./db/elriel.db # Only used in SQLite mode

# Supabase configuration - REQUIRED for production deployment
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Upload limits
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes

# ARG configuration
ENABLE_HIDDEN_ROUTES=true
GLITCH_INTENSITY=medium  # low, medium, high

# Navigation debugging
ENABLE_NAV_DEBUG=true
SHOW_ERROR_NOTIFICATIONS=true

# Theme configuration
# Options: dark, light
THEME=dark
